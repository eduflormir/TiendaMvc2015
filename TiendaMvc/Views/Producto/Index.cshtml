@model IEnumerable<TiendaMvc.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>listado de productos</h2>

@foreach (var item in Model)
{
    //tres filas por fila
    <div class="col-md-4">
        @Html.DisplayNameFor(o => o.fabricante_nombre)
        @Html.DisplayFor(o => item.fabricante_nombre)
        <br/>

        <h3>Almacenes</h3>
        <ul>

            @foreach (var alm in item.Almacen_Producto)
            {
                @Html.Partial("_fichaAlmacen", alm.Almacen); // VistaParcial, Modelo

            }

        </ul>
        
        @Html.ActionLink("Ver", "Detalle", new {id = item.nombre.Replace("_"," ")})
    </div>
    // Detalle = Action
    // Ver = Vista

}

